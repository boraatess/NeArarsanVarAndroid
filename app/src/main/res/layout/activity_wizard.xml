<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".wizard.WizardActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/wDismissButt"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dismiss_butt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/signupButt"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@color/whiteTextColor"
                android:text="@string/wizard_signup_button"
                android:textAllCaps="false"
                android:textColor="@color/blackTextColor" />

            <Button
                android:id="@+id/facebookButt"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_facebook"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/googleButt"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/googlesignin"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tosButt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/wizard_terms_title"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/whiteTextColor"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/dotsImg"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/dots1" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>
