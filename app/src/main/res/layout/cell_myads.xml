<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cmaImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:background="@drawable/round_circle_line"
        app:srcCompat="@drawable/neararsanvar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/cmaImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cmaAdTitleTxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/user_profile_text_placeholder"
            android:textColor="@color/blackTextColor"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/cmaDatetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawableEnd="@drawable/time_ic"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/user_profile_text_placeholder"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/cmaPricetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="true"
            android:text="@string/user_profile_text_placeholder"
            android:textColor="@color/black"
            android:textSize="11sp" />
        <!--            android:layout_weight="1"
            android:gravity="center_vertical"-->


    </LinearLayout>


</LinearLayout>