<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/feedsStarsImg"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/star_0" />

    <TextView
        android:id="@+id/feedsByDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/feedsStarsImg"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/feedsStarsImg"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/feedbacks_text_placeholder"
        android:textColor="@color/blackTextColor"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/feedsAdTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedsStarsImg"
        android:layout_alignStart="@+id/feedsStarsImg"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/feedbacks_text_placeholder"
        android:textColor="@color/blackTextColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/feedsFeedbackTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedsAdTitleTxt"
        android:layout_alignStart="@+id/feedsAdTitleTxt"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/feedbacks_text_placeholder"
        android:textSize="11sp" />
</RelativeLayout>